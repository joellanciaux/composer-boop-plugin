{
  "name": "composer-beep",
  "displayName": "Composer Beep",
  "description": "VS Code extension to interact with Cursor composer text box",
  "version": "0.0.1",
  "publisher": "joellanciaux",
  "license": "MIT",
  "author": {
    "name": "Joel Lanciaux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cursor-beep"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "cursor",
    "sound",
    "notification",
    "composer"
  ],
  "activationEvents": [
    "onCustomEditor:composer-code-block-anysphere",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Composer Beep",
      "properties": {
        "composerBeep.delayMs": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Delay in milliseconds before playing the sound after typing stops"
        },
        "composerBeep.soundFile": {
          "type": "string",
          "default": "notification-bloop.wav",
          "enum": [
            "notification-bloop.wav",
            "notification-ding.wav",
            "notification-pop.wav"
          ],
          "description": "Sound file to play (from the included sounds)"
        },
        "composerBeep.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the beep sound"
        },
        "composerBeep.volume": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 1,
          "description": "Volume of the beep sound (0.0 to 1.0)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  },
  "files": [
    "out/**/*",
    "media/**/*"
  ]
}
